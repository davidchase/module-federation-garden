{
    "compilerOptions": {
      "composite": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "allowSyntheticDefaultImports": true,
      "incremental": true,
      "tsBuildInfoFile": "./buildcache/nodejs",
      "rootDir": "./src",
      "outDir": "dist"
    }, 
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}